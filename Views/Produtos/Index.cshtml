@model List<CRUD_Banco_de_Dados_NoSQL.Models.Produtos>
<h2>Produtos</h2>
<h3 class="badge bg-secondary">Cadastro de Produtos - Buscar</h3>

<p class="text-left"><a class="btn btn-primary" href="/Produtos/MostrarInserir"><i class="glyphicon glyphicon-plus-sign text-primary"></i>Adicionar &raquo;</a></p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Categoria</th>  
            <th scope="col">Estoque</th>
            <th scope="col">Preço</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nome</td>
                <td>@item.Categoria</td>
                <td>@item.Estoque</td>
                <td>@item.preco</td>
                <td>@item.Fornecedor</td>
                <td>
                    <a href="/Produtos/Visualizar/@item.id" class="text-center text-primary bi-eye"></a>
                    <a href="/Produtos/MostrarAtualizar/@item.id" class="p-2 text-center text-success bi-pencil"></a>
                    <a href="/Produtos/MostrarExcluir/@item.id" class="text-center text-danger bi-trash"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
